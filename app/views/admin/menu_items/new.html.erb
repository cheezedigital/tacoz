<h1>New Menu Item</h1>
<%= nested_form_for [:admin, @menu_item] do |f| %>

  <%= f.label :name %>:
  <%= f.text_field :name %>

  <%= f.label :price %>:
  <%= f.number_field :price %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :vegetarian %>
  <%= f.check_box :vegetarian %>

  <%= f.label :picture %>
  <%= f.file_field :picture %>

  <p><%= f.link_to_add('Add Ingredient', :ingredients) %></p>
  <%= f.fields_for(:ingredients) do |ingredient_form| %>
    <div class="form-group">
      <%= ingredient_form.text_field(:name, placeholder: 'Name') %>
    </div>
    <div class="form-group">
      <%= ingredient_form.text_field(:calories, placeholder: 'Calories') %>
    </div>
    <p><%= ingredient_form.link_to_remove('Remove Ingredient') %></p>
  <% end %>

  <%= f.submit%>

<% end %>
