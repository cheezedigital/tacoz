<!DOCTYPE html>
<html>
<head>
  <title>Tacoz</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
</head>
<body>
  <div class="container">
    <header id="site-header">
      <div class="row">
        <div class="col-sm-4">
          <%= link_to(image_tag('default_extra_small.png'), root_path) %>
        </div>
        <div id="col-sm-8">
          <%= render('shared/topsearch')%>
          <br>
          <%= link_to('Login with Twitter', user_omniauth_authorize_path(:twitter))%>
        </div>
      </div>
      <%= render('shared/topnav') %>
    </header>
    <section id="site-content">
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
      <%= yield %>
    </section>
    <footer id="site-footer">
      <p class="text-center">
        <small>copyright &copy; 2014 Tacoz</small>
      </p>
    </footer>
  </div>
  <%= javascript_include_tag 'application' %>
</body>
</html>
